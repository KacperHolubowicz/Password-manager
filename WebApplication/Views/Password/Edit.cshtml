@model WebApplication.ViewModels.ServicePassword.PasswordEditVM
@{
    var msg = ViewData["MasterError"];
}

<h4>Edit password</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterPassword" class="control-label"></label>
                <input asp-for="MasterPassword" class="form-control" type="password"/>
                <span asp-validation-for="MasterPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (msg != null)
{
    <span class="text-danger">@msg</span>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

